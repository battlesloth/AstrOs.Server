    "version": "0.2.0",
    "configurations": [
        {
            "name": "nodejs",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/api",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "start"
            ],
            "console": "externalTerminal",
            "preLaunchTask": "build server"
        },
        {
            "name": "angular",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/client",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "start"
            ],
            "console": "externalTerminal",
            "preLaunchTask": "build commons"
        },
        {
            "name": "browser",
            "type": "pwa-msedge",
            "request": "launch",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}/client",
            "userDataDir": "${workspaceRoot}/.vscode/edge"
        }
    ],
    "compounds": [
        {
            "name": "server/client",
            "configurations": [
                "nodejs",
                "angular",
                "browser"
            ]
        }
    ]
}