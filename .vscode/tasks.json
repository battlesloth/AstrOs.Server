{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "copy .env",
            "type": "shell",
            "command": "",
            "windows":{
                "command": "Copy-Item -Path ${workspaceFolder}/.env -Destination ${workspaceFolder}/api/dist/.env "  
            }
        },
        {
            "label": "lint and build",
            "type": "shell",
            "command": "npm",
            "args": ["run","build"],
            "options": {
                "cwd": "${workspaceFolder}/api"
            }
        }
    ]
}