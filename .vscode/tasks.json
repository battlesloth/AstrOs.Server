{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "test api",
            "type": "shell",
            "command": "npm",
            "args": ["run", "test"],
            "options": {
                "cwd": "${workspaceFolder}/astros_api"
            },
            "dependsOn": "build commons"
        },
        {
            "label": "build commons",
            "type": "shell",
            "command": "npm",
            "args": ["run", "build"],
            "options": {
                "cwd": "${workspaceFolder}/astros_common"
            }
        },
        {
            "label": "lint and build",
            "type": "shell",
            "command": "npm",
            "args": ["run","build"],
            "options": {
                "cwd": "${workspaceFolder}/astros_api"
            }
        },
        {
            "label": "copy .env",
            "type": "shell",
            "command": "",
            "windows":{
                "command": "Copy-Item -Path ${workspaceFolder}/.env -Destination ${workspaceFolder}/astros_api/dist/.env "  
            },
            "dependsOn": "lint and build"
        },
        {
            "label": "fix paths",
            "type": "shell",
            "command": "",
            "windows":{
                "command": "powershell",
                "args": [
                    "-ExecutionPolicy",
                    "Unrestricted",
                    "-NoProfile",
                    "-File",
                    "${workspaceFolder}/astros_api/fix_path.ps1" 
                ]
            },
            "options": {
                "cwd": "${workspaceFolder}/astros_api"
            },
            "dependsOn": "lint and build"
        },
        {
        "label": "build server",
        "dependsOn": [
            "fix paths",
            "copy .env"
            ]
        }
    ]
}