{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "rootDir": "./src",
        "module": "ESNext",
        "moduleResolution": "node",
        "allowJs": true,
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "sourceMap": true,       
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "types": ["node", "jest"],
        "paths": {
            "src/*":[
                "src/*"
            ]
        },
        "plugins": [
            {
                "transform": "@zerollup/ts-transform-paths",
                "exclude": ["*"]
            }
        ]
    },
    "typeAcquisition": { "include": ["jest"] },
    "exclude": [ 
        "./jest.config.js",
        "./webpack.config.js",
        "dist",
        "**/*.test.ts",
        "**/*.mock.ts",
    ]
}